<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.bookmyskills"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.customcontrols.springindicator.ScrollerViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@android:color/transparent" />

    <com.customcontrols.springindicator.SpringIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@android:color/transparent"
        app:siIndicatorColor="@color/actionbar_color"
        app:siIndicatorColors="@array/indicator_colors"
        app:siRadiusMax="30dp"
        app:siRadiusMin="25dp"
        app:siSelectedTextColor="@android:color/white"
        app:siTextColor="@color/actionbar_color"
        app:siTextSize="18sp" />

</RelativeLayout>