<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            

            <LinearLayout
                android:id="@+id/stage2LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/educationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:visibility="gone" >

                        <EditText
                            android:id="@+id/educationEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/education"
                            android:drawablePadding="10dp"
                            android:gravity="center|left"
                            android:hint="Education*"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@android:color/black" />

                        <Button
                            android:id="@+id/addMoreEducationButton"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|center_vertical"
                            android:layout_margin="10dp"
                            android:background="@drawable/add_more" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/certificationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:visibility="gone" >

                        <EditText
                            android:id="@+id/certificationsEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/certificate"
                            android:drawablePadding="10dp"
                            android:gravity="center|left"
                            android:hint="Certification"
                            android:inputType="textEmailAddress"
                            android:padding="10dp"
                            android:textColor="@android:color/black" />

                        <Button
                            android:id="@+id/addMoreCertificateButton"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|center_vertical"
                            android:background="@drawable/add_more" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/skills1EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight=".5"
                        android:drawableLeft="@drawable/skills"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:hint="Skills 1*"
                        android:padding="10dp"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@+id/workHr1EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight=".5"
                        android:drawableLeft="@drawable/working_hours"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:hint="Working Hours*"
                        android:inputType="time"
                        android:padding="10dp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/ratingSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight=".5"
                        android:entries="@array/rating_array"
                        android:gravity="center"
                        android:prompt="@string/rating_prompt" />

                    <Spinner
                        android:id="@+id/lastUserdSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight=".5"
                        android:entries="@array/experience_array"
                        android:gravity="center"
                        android:prompt="@string/last_used" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/skills2EditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight=".5"
                            android:drawableLeft="@drawable/skills"
                            android:drawablePadding="10dp"
                            android:gravity="center|left"
                            android:hint="Skills 2*"
                            android:padding="10dp"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:id="@+id/workHr2EditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight=".5"
                            android:drawableLeft="@drawable/working_hours"
                            android:drawablePadding="10dp"
                            android:gravity="center|left"
                            android:hint="Working Hours*"
                            android:inputType="time"
                            android:padding="10dp"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <Spinner
                            android:id="@+id/rating2Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight=".5"
                            android:entries="@array/rating_array"
                            android:gravity="center"
                            android:prompt="@string/rating_prompt" />

                        <Spinner
                            android:id="@+id/lastUserd2Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight=".5"
                            android:gravity="center"
                            android:prompt="@string/last_used" />

                        <Button
                            android:id="@+id/addMoreSkillsButton"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|center_vertical"
                            android:layout_margin="10dp"
                            android:background="@drawable/add_more" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/skillsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>

                
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>